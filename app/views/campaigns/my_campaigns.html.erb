<div class="mycampaigns-container">
  <% if @campaign_options.any? %>
    <% @campaign_options.each do |campaign_option| %>
      <% campaign_option.campaigns.each do |campaign| %> <!-- Loop through campaigns -->
        <%= link_to campaign_path(campaign.id), class: 'card-link' do %>
          <div class="mycampaigns-card">
            <div class="mask"></div>
            <div class="character-profile-picture">
              <% if campaign.character&.image_path %>
                <%= image_tag campaign.character.image_path, class: "profile-pic" %>
              <% end %>
            </div>
            <!-- Campaign Image and Name -->
            <div class="mycampaigns-image">
              <%= image_tag campaign_option.image_url %>
              <div class="campaign-name-overlay">
                <%= campaign_option.name %>
              </div>
            </div>
          </div>
        <% end %>
      <% end %> <!-- End of campaigns loop -->
    <% end %>
  <% else %>
    <p>You currently have no campaigns.</p>
  <% end %>
</div>

<%= link_to campaign_options_path, class: "circle-add-btn-link" do %>
  <button class="circle-add-btn">+</button>
<% end %>
