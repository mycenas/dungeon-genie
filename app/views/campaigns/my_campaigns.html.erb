<div class="campaign-card-container">
  <% if @campaign_options.any? %>
      <% @campaign_options.each do |campaign| %>
      <div class="campaign-flip-card">
        <div class="campaign-flip-card-inner">
          <!-- Card Front -->
          <div class="campaign-flip-card-front">
          <figure>
            <%= image_tag campaign.image_url %>
            <figcaption><%= campaign.name %></figcaption>
          </figure>
          </div>
          <!-- Card Back -->
            <div class="character-flip-card-back" style="background-image: url(campaign.image_url);">
            <ul class="no-bullets bold-list">
              <li>Location: <span class="interpolated"> <%= campaign.location %></span></li>
              <li>Description: <span class="interpolated"> <%= campaign.description %></span></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>You currently have no campaigns.</p>
  <% end %>
</div>
<%= link_to campaign_options_path, class: "circle-add-btn-link" do %>
  <button class="circle-add-btn">+</button>
<% end %>
