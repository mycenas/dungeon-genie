<div class="main-content">
  <div class="new-campaign-container">
    <div class="new-campaign-form-content">
      <%= form_with(model: @campaign, local: true, html: { class: "new-campaign-form" }) do |f| %>

        <div class="form-field">
          <%= f.label :name %>
          <%= f.text_field :name %>
        </div>

        <div class="form-field">
          <%= f.label :location %>
          <%= f.text_field :location %>
        </div>

        <div class="form-field">
          <%= f.label :description %>
          <%= f.text_field :description %>
        </div>

        <div class="actions">
          <%= f.submit %>
        </div>

      <% end %>
    </div>
  </div>
</div>
